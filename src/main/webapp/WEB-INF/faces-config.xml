<?xml version="1.0"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
	<managed-bean>
		<managed-bean-name>teamListModel</managed-bean-name>
		<managed-bean-class>de.paluch.burndown.jsf.impl.TeamListModel</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>teamListController</managed-bean-name>
		<managed-bean-class>de.paluch.burndown.jsf.impl.TeamListController</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>sprints</property-name>
			<property-class>de.paluch.burndown.jsf.impl.SprintsListModel</property-class>
			<value>#{sprintsListModel}</value>
		</managed-property>
		<managed-property>
			<property-name>teams</property-name>
			<property-class>de.paluch.burndown.jsf.impl.TeamListModel</property-class>
			<value>#{teamListModel}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>sprintListModel</managed-bean-name>
		<managed-bean-class>de.paluch.burndown.jsf.impl.SprintListModel</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>sprintsListModel</managed-bean-name>
		<managed-bean-class>de.paluch.burndown.jsf.impl.SprintsListModel</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>sprintController</managed-bean-name>
		<managed-bean-class>de.paluch.burndown.jsf.impl.SprintController</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>sprintListModel</property-name>
			<property-class>de.paluch.burndown.jsf.impl.SprintListModel</property-class>
			<value>#{sprintListModel}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>sprintsListController</managed-bean-name>
		<managed-bean-class>de.paluch.burndown.jsf.impl.SprintsListController</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>sprintListModel</property-name>
			<property-class>de.paluch.burndown.jsf.impl.SprintListModel</property-class>
			<value>#{sprintListModel}</value>
		</managed-property>
		<managed-property>
			<property-name>sprintsListModel</property-name>
			<property-class>de.paluch.burndown.jsf.impl.SprintsListModel</property-class>
			<value>#{sprintsListModel}</value>
		</managed-property>
	</managed-bean>
	<navigation-rule>
		<navigation-case>
			<from-outcome>gotoSprintList</from-outcome>
			<to-view-id>/team.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>gotoSprint</from-outcome>
			<to-view-id>/sprint.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
</faces-config>
